@model IList<ProductOverviewModel>

@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <div class="product-grid bestsellers">
        <div class="title">
            <h1>@T("Bestsellers")</h1>
        </div>
        <div class="item-grid">
            @foreach (var item in Model)
            {
                <div class="landingpage-item-box">
                    @Html.Partial("_ProductBox", item)
                </div>
            }
        </div>
    </div>
}